<table class="table">
    <thead>
        <tr>
        <th scope="col"><%= "Title" %></th>
        <th scope="col"><%= "Description" %></th>
        <th scope="col"><%= "Location" %></th>
        <th scope="col"><%= "Date" %></th>
        </tr>
    </thead>
    <tbody>
        <% @events.each do |e| %>
        <tr>
            <td><%= link_to e.title, edit_event_path(e), :class => "link-dark" %></td>
            <td><%= e.description %></td>
            <td><%= e.location %></td>
            <td><%= e.date %></td>
            <td>
            <% if admin_signed_in? %>
                <%= form_with model: @attendance do |form|%>
                    <%= form.hidden_field :event_id, value: e.id %>

                    <%= form.submit "Participate" %>
                <% end %>
            <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>


<%= link_to 'New Event', new_event_path %>
